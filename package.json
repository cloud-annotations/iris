{
  "name": "watson-ml",
  "version": "0.1.0",
  "scripts": {
    "client-remove": "cd client && yarn remove",
    "client-add": "cd client && yarn add",
    "client": "cd client && yarn start",
    "build": "cd client && npm run build",
    "deploy": "yarn build && export DEPLOY_TO=production && ./deploy.sh",
    "stage": "yarn build && export DEPLOY_TO=staging && ./deploy.sh",
    "server": "nodemon server.js",
    "start": "concurrently --kill-others-on-fail \"yarn server\" \"yarn client\""
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.16.3",
    "frameguard": "^3.0.0",
    "request": "^2.88.0",
    "socket.io": "^2.2.0",
    "socket.io-redis": "^5.2.0"
  },
  "devDependencies": {
    "concurrently": "^3.6.0"
  }
}
